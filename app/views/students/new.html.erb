<h1><%= @group.title %></h1>
<div class="row">
  <div class="col-sm-7">
    <h2>Add student:</h2>

    <%= render 'form' %>

    <%= link_to "Go to #{@group.title}'s main page", group_path(@group) %>

  </div>

  <div class="col-sm-5">
    <h3>Current roster:</h3>

    <% @group.alpha_students.each do |student| %>
      <li><%= student.last_name %>, <%= student.first_name %></li>
    <% end %>
  </div>
</div>


