<h2>All your classes</h2>
<div class="row">
  <table style="width:50%">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% current_user.groups.each do |group| %>
        <tr>
          <%= form_for (group) do |f| %>
            <td><%= f.text_field :title %></td>
            <td><%= f.submit "Save Change" %></td>
          <% end %>
          <td><%= button_to "Remove class", group_path(group), method: :delete, data: { confirm: "Are you sure you want to delete this class for good?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<a href="/groups">Back</a>