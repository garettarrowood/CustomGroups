<h2>All your classes</h2>
<div class="row">
  <div style="width:50%" class="table">
    <% current_user.groups.each do |group| %>
      <div class="tr">
        <%= form_for (group) do |f| %>
          <span class="td"><%= f.label "Title:" %><%= f.text_field :title %></span>
          <span class="td"><%= f.submit "Save Change" %></span>
        <% end %>
          <span class="td"><%= button_to "Remove #{group.title}", group_path(group), method: :delete, data: { confirm: "Are you sure you want to delete this class for good?" } %></span>
      </div>
    <% end %>
  </div>
</div>

<a href="/groups">Back</a>